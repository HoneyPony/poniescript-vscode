{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PonieScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#param-list"
		},
		{
			"include": "#line-comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.poniescript",
				"match": "\\b(if|else|while|loop|for|return|break|continue|in)\\b"
			},
			{
				"name": "keyword.conditional.poniescript",
				"match": "\\b(and|or|not)\\b"
			},
			{
				"name": "keyword.other.poniescript",
				"match": "\\b(class|var|fun|new|self)\\b"
			},
			{
				"name": "meta.preprocessor",
				"match": "\\b(print|str|lerp)\\b"
			},
			{
				"name": "constant.language.poniescript.boolean",
				"match": "\\b(true|false)\\b"
			},
			{
				"name": "constant.language.poniescript.nil",
				"match": "\\bnil\\b"
			}]
		},
		"types": {
			"name": "entity.name.type",
			"match": "\\b(int|float|bool|Str|StrBuf|StrConst|vec(2|3|4)i?|Array)\\b"
		},
		"param-list": {
			"begin": "(?<=fun\\s+)\\w+\\(",
			"end": "\\)",
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "\\w+(?=\\s*:)"
				},
				{ "include": "#types" }
			],
			"beginCaptures": {
				"0": {
					"name": "entity.name.function"
				}
			}
		},
		"strings": {
			"name": "string.quoted.double.poniescript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.poniescript",
					"match": "\\\\."
				}
			]
		},
		"line-comments": {
			"patterns": [
				{
					"name": "comment.line.poniescript.testexpect",
					"match": "\\/\\/(!)(.*)(?:\\n|\\b)",
					"captures": {
						"1": { "name": "constant.character.escape.poniescript.commentop" },
						"2": { "name": "string.unquoted.poniescript.test" }
					}
				},
				{
					"name": "comment.line.poniescript",
					"match": "\\/\\/.*(?:\\n|\\b)"

				}
			]
		}
	},
	"scopeName": "source.poni"
}
