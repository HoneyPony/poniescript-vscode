{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PonieScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#param-list"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.poniescript",
				"match": "\\b(if|while|for|return)\\b"
			},
			{
				"name": "keyword.other.poniescript",
				"match": "\\b(class|var|fun)\\b"
			},
			{
				"name": "meta.preprocessor",
				"match": "\\b(print|str)\\b"
			}]
		},
		"types": {
			"name": "entity.name.type",
			"match": "\\b(int|float|Str|StrBuf|StrConst)\\b"
		},
		"param-list": {
			"begin": "(?<=fun\\s+)\\w+\\(",
			"end": "\\)",
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "\\w+(?=\\s*:)"
				},
				{ "include": "#types" }
			],
			"beginCaptures": {
				"0": {
					"name": "entity.name.function"
				}
			}
		},
		"strings": {
			"name": "string.quoted.double.poniescript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.poniescript",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.poni"
}