{
    "name": "poniescript-vscode",
    "displayName": "PonieScript Language Support",
    "description": "Language support for PonieScript.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "out/extension.js",
    "contributes": {
        "languages": [{
            "id": "poniescript",
            "aliases": ["PonieScript", "poniescript"],
            "extensions": [".poni"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "poniescript",
            "scopeName": "source.poni",
            "path": "./syntaxes/poniescript.tmLanguage.json"
        }],
        "configuration": {
            "title": "PonieScript",
            "properties": {
                "poniescript.languageServer.path": {
                    "type": "string",
                    "default": "poniescript-lsp",
                    "description": "Path to PonieScript LSP executable"
                },
                "poniescript.languageServer.args": {
                    "type": "array",
                    "default": [],
                    "description": "Arguments to pass to the LSP executable"
                }
            }
        },
        "commands": [
            {
                "command": "poniescript.restartLanguageServer",
                "title": "PonieScript: Restart Language Server"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.50.0",
        "@types/node": "14.x",
        "typescript": "^4.0.0"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    }
}